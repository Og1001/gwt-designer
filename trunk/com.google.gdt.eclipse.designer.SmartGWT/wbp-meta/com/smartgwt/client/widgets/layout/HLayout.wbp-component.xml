<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
	<description>A subclass of Layout that applies a sizing policy along the horizontal axis, interpreting
		percent and "*" sizes as proportions of the width of the layout. HLayouts will set any members that do
		not have explict heights to match the layout.</description>
	<!-- CREATION -->
	<creation>
		<source><![CDATA[new com.smartgwt.client.widgets.layout.HLayout()]]></source>
	</creation>
	<!-- PROPERTIES -->
	<properties-preferred names="setDefaultLayoutAlign(com.smartgwt.client.types.VerticalAlignment)"/>
	<properties-normal names=""/>
	<properties-advanced names=""/>
	<!-- PARAMETERS -->
	<parameters>
		<parameter name="variable.name">hLayout</parameter>
		<!-- flow container -->
		<parameter name="flowContainer">true</parameter>
		<parameter name="flowContainer.horizontal">true</parameter>
		<parameter name="flowContainer.component">com.google.gwt.user.client.ui.Widget</parameter>
		<parameter name="flowContainer.association">%parent%.addMember(%child%)</parameter>
	</parameters>
</component>
