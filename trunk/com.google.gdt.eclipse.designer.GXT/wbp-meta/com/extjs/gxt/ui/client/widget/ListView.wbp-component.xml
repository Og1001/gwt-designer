<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
	<description>A mechanism for displaying data using custom layout templates. ListView uses an XTemplate as
		its internal templating mechanism.</description>
	<!-- CREATION -->
	<creation>
		<source><![CDATA[new com.extjs.gxt.ui.client.widget.ListView(new com.extjs.gxt.ui.client.store.ListStore())]]></source>
	</creation>
	<!-- PROPERTIES -->
	<properties-preferred names="displayProperty itemSelector simpleTemplate setTemplate(java.lang.String)"/>
	<!-- PARAMETERS -->
	<parameters>
		<!-- new -->
		<parameter name="liveComponent.forcedSize.width">300px</parameter>
		<parameter name="liveComponent.forcedSize.height">200px</parameter>
		<!-- untyped events -->
		<parameter name="GXT.untyped.events: com.extjs.gxt.ui.client.widget.ListView"><![CDATA[
			ListViewEvent Select DoubleClick ContextMenu
		]]></parameter>
	</parameters>
</component>
