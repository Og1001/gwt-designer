<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
    <model class="com.google.gdt.eclipse.designer.smart.model.ColumnTreeInfo"/>
    <description>The ColumnTree provides an alternate navigation paradigm for Tree data, sometimes
        called "Miller Columns".</description>
    <!-- METHODS -->
    <methods>
        <method name="setFields" order="beforeAssociation">
            <parameter type="com.smartgwt.client.widgets.grid.ListGridField[]" child="true">
                <tag name="arrayObject.hideInTree" value="true"/>
                <tag name="arrayObject.removeOnEmpty" value="true"/>
            </parameter>
        </method>
    </methods>
    <!-- PROPERTIES -->
    <properties-preferred names=""/>
    <properties-advanced names="animateShowEffect autoFetch* border canDrop*"/>
    <properties-advanced names="closedIconSuffix dropIconSuffix openIconSuffix"/>
    <properties-advanced names="customIconProperty customIconOpenProperty"/>
    <properties-advanced names="default* folderIcon nodeIcon layoutMargin"/>
    <properties-advanced names="layoutBottomMargin layoutLeftMargin layoutRightMargin layoutTopMargin"/>
    <properties-advanced names="loadData*"/>
    <properties-noDefaultValue names="titleField"/>
    <property id="setAutoFetchData(java.lang.Boolean)">
        <defaultValue value="null"/>
    </property>
    <!-- PARAMETERS -->
    <parameters>
        <!-- flow container -->
        <parameter name="flowContainer.tree">true</parameter>
        <parameter name="flowContainer.tree.horizontal">true</parameter>
        <parameter name="flowContainer.tree.component"
            >com.smartgwt.client.widgets.grid.ListGridField</parameter>
    </parameters>
</component>
