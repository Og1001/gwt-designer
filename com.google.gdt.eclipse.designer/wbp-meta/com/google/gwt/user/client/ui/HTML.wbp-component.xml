<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
	<description>A widget that can contain arbitrary HTML.</description>
	<!-- CREATION -->
	<creation>
		<source><![CDATA[new com.google.gwt.user.client.ui.HTML("New HTML", true)]]></source>
		<x-attribute name="wordWrap" value="true"/>
		<x-content>new HTML</x-content>
	</creation>
	<!-- CONSTRUCTORS -->
	<constructors>
		<constructor>
			<parameter type="java.lang.String" property="setHTML(java.lang.String)"/>
		</constructor>
		<constructor>
			<parameter type="java.lang.String" property="setHTML(java.lang.String)"/>
			<parameter type="boolean" property="setWordWrap(boolean)"/>
		</constructor>
	</constructors>
	<!-- PROPERTIES -->
	<properties-preferred names="hTML"/>
	<properties-hidden names="text"/>
	<property-tag name="text" tag="isText" value="false"/>
	<property-tag name="hTML" tag="isText" value="true"/>
	<!-- PARAMETERS -->
	<parameters>
		<!-- related styles -->
		<parameter name="relatedStyles"><![CDATA[
			.gwt-HTML { }
		]]></parameter>
	</parameters>
</component>
