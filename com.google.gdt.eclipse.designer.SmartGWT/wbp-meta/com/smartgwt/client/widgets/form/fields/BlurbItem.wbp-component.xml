<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
    <description>FormItem intended for inserting blurbs of instructional HTML into DynamicForms. Set
        the 'defaultValue' of this item to the HTML you want to embed in the form.</description>
    <!-- CREATION -->
    <creation>
        <source><![CDATA[new com.smartgwt.client.widgets.form.fields.BlurbItem("newBlurbItem_%index%")]]></source>
        <invocation signature="setTitle(java.lang.String)"><![CDATA["New BlurbItem"]]></invocation>
    </creation>
    <!-- CONSTRUCTORS -->
    <constructors>
        <constructor>
            <parameter type="java.lang.String" property="setName(java.lang.String)"/>
        </constructor>
    </constructors>
    <!-- PROPERTIES -->
    <properties-preferred names="setDefaultValue(java.lang.String)"/>
    <properties-advanced names=""/>
    <properties-noDefaultValue names="colSpan"/>
</component>
