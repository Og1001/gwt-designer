<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
	<description>A subclass of Layout that simply stacks members on the horizontal axis without trying to
		manage their width. On the vertical axis, any members that do not have explict heights will be sized
		to match the height of the stack. </description>
	<!-- CREATION -->
	<creation>
		<source><![CDATA[new com.smartgwt.client.widgets.layout.HStack()]]></source>
	</creation>
	<!-- PROPERTIES -->
	<properties-preferred names="setDefaultLayoutAlign(com.smartgwt.client.types.VerticalAlignment)"/>
	<properties-normal names=""/>
	<properties-advanced names=""/>
	<!-- PARAMETERS -->
	<parameters>
		<parameter name="variable.name">hStack</parameter>
		<!-- flow container -->
		<parameter name="flowContainer">true</parameter>
		<parameter name="flowContainer.horizontal">true</parameter>
		<parameter name="flowContainer.component">com.google.gwt.user.client.ui.Widget</parameter>
		<parameter name="flowContainer.association">%parent%.addMember(%child%)</parameter>
	</parameters>
</component>
