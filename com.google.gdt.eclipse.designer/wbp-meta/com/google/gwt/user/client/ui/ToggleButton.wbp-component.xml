<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
	<description>A ToggleButton is a stylish stateful button which allows the user to toggle between UP and
		DOWN states.</description>
	<!-- CREATION -->
	<creation>
		<source><![CDATA[new com.google.gwt.user.client.ui.ToggleButton("Up text")]]></source>
		<x-attribute name="text" value="New ToggleButton"/>
	</creation>
	<!-- CONSTRUCTORS -->
	<constructors>
		<!-- with images -->
		<constructor>
			<parameter type="com.google.gwt.user.client.ui.Image"/>
		</constructor>
		<constructor>
			<parameter type="com.google.gwt.user.client.ui.Image"/>
			<parameter type="com.google.gwt.user.client.ui.ClickListener">
				<tag name="events: add listener method"
					value="addClickListener(com.google.gwt.user.client.ui.ClickListener)"/>
			</parameter>
		</constructor>
		<constructor>
			<parameter type="com.google.gwt.user.client.ui.Image"/>
			<parameter type="com.google.gwt.user.client.ui.Image"/>
		</constructor>
		<constructor>
			<parameter type="com.google.gwt.user.client.ui.Image"/>
			<parameter type="com.google.gwt.user.client.ui.Image"/>
			<parameter type="com.google.gwt.user.client.ui.ClickListener">
				<tag name="events: add listener method"
					value="addClickListener(com.google.gwt.user.client.ui.ClickListener)"/>
			</parameter>
		</constructor>
		<!-- with text -->
		<constructor>
			<parameter type="java.lang.String" property="setText(java.lang.String)"/>
		</constructor>
		<constructor>
			<parameter type="java.lang.String" property="setText(java.lang.String)"/>
			<parameter type="com.google.gwt.user.client.ui.ClickListener">
				<tag name="events: add listener method"
					value="addClickListener(com.google.gwt.user.client.ui.ClickListener)"/>
			</parameter>
		</constructor>
		<constructor>
			<parameter type="java.lang.String" property="setText(java.lang.String)"/>
			<parameter type="java.lang.String"/>
		</constructor>
	</constructors>
	<!-- PROPERTIES -->
	<properties-preferred names="text"/>
	<property-tag name="text" tag="isText" value="true"/>
	<!-- PARAMETERS -->
	<parameters>
		<!-- related styles -->
		<parameter name="relatedStyles"><![CDATA[
			.gwt-ToggleButton-up {}
			.gwt-ToggleButton-down {}
			.gwt-ToggleButton-up-hovering {}
			.gwt-ToggleButton-down-hovering {}
			.gwt-ToggleButton-up-disabled {}
			.gwt-ToggleButton-down-disabled {}
			
			.gwt-ToggleButton-up .html-face {}
			.gwt-ToggleButton-down .html-face {}
			.gwt-ToggleButton-up-hovering .html-face {}
			.gwt-ToggleButton-down-hovering .html-face {}
			.gwt-ToggleButton-up-disabled .html-face {}
			.gwt-ToggleButton-down-disabled .html-face {}
		]]></parameter>
	</parameters>
</component>
