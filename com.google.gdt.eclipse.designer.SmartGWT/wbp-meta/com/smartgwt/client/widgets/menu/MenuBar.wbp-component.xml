<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
    <model class="com.google.gdt.eclipse.designer.smart.model.menu.MenuBarInfo"/>
    <description>A MenuBar is a bar of buttons used to show a set of menus.</description>
    <!-- METHODS -->
    <methods>
        <method name="setMenus" order="beforeAssociation">
            <parameter type="com.smartgwt.client.widgets.menu.Menu[]" child="true">
                <tag name="arrayObject.hideInTree" value="true"/>
                <tag name="arrayObject.removeOnEmpty" value="true"/>
            </parameter>
        </method>
        <method name="addMenus" order="beforeAssociation">
            <parameter type="com.smartgwt.client.widgets.menu.Menu[]" child="true">
                <tag name="arrayObject.hideInTree" value="true"/>
                <tag name="arrayObject.removeOnEmpty" value="true"/>
            </parameter>
            <parameter type="int"/>
        </method>
    </methods>
    <!-- PARAMETERS -->
    <parameters>
        <!-- flow container -->
        <parameter name="flowContainer.tree">true</parameter>
        <parameter name="flowContainer.tree.horizontal">true</parameter>
        <parameter name="flowContainer.tree.component">com.smartgwt.client.widgets.menu.Menu</parameter>
    </parameters>
</component>
